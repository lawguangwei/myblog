extends ../layout/index_layout

block content
    div(id='content-pane')
        h1.text-info 新建博文
        div(id='write-pane')
            h3.text-success 标题
            input(id='title',type='text').form-control
            h3.text-success 内容
            script(id='container',name='content',type='text/plain') 我的博文
            h3.text-success 分类
                a(style='font-size:5px') 创建分类
            select(id='collection',style='width:300px').form-control
                option(selected) 默认
            label.radio-inline
                input(type='radio',name='type',id='type-public',value='public',checked)
                span 公开
            label.radio-inline
                input(type='radio',name='type',id='type-private',value='public')
                span 私人
            h3
                button(id='commit-btn',style='width:200px').btn.btn-primary 保存

