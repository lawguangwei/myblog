extends ../layout/login_layout

block content
   div.container-fluid
      div(id='top-row').row
         -if(msg)
            div.col-md-6.col-md-offset-3.alert.alert-danger.alert-dismissable.fade.in
               a(data-dismiss='alert').close &times;
               p #{msg}
         h2.col-md-12.form-title.text-center.text-success 用户注册
         div.col-md-6.col-md-offset-3.form-div
            form(method='post',action='register').form-horizontal
               div.form-group
                  label.control-label.text-info.col-md-3 用户邮箱:
                  div.col-md-9
                     input(id='input-email',type='email',name='email',placeholder='输入注册邮箱').form-control
               div.form-group
                  label.control-label.text-info.col-md-3 用户名:
                  div.col-md-9
                     input(id='input-name',type='text',name='name',placeholder='输入用户名').form-control
               div.form-group
                  label.col-md-3.text-info.control-label 用户密码:
                  div.col-md-9
                     input(id='input-pass1',type='password',name='pass1',placeholder='输入密码').form-control
               div.form-group
                  label.control-label.text-info.col-md-3 确认密码:
                  div.col-md-9
                     input(id='input-pass2',type='password',name='pass2',placeholder='重复输入密码').form-control
               div.form-group
                  div.col-md-4.col-md-offset-4
                     a(id='btn-register').btn.btn-default.col-md-12 注册


